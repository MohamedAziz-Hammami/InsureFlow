@using Microsoft.AspNetCore.Identity
@using Microsoft.AspNetCore.Mvc.Rendering
@inject SignInManager<AstreeWebApp.Areas.Identity.Data.AstreeUser> SignInManager
@inject UserManager<AstreeWebApp.Areas.Identity.Data.AstreeUser> UserManager

<ul class="nav" style="list-style:none;">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form method="post" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                @Html.AntiForgeryToken()
            </form>
        </li>
    }
    else
    {
        <li >
            <a class="btn btn-outline-primary" style="border-radius: 20px;text-decoration:none;" asp-area="Identity" asp-page="/Account/Register"><i class="fa-solid fa-user-plus"></i> S'inscrir</a>
        </li>
        <li >
            <a class="btn btn-outline-primary" style="border-radius: 20px;text-decoration:none;" asp-area="Identity" asp-page="/Account/Login"><i class="fa-solid fa-right-to-bracket"></i> Se connecter</a>
        </li>
        <li >
            <a class="btn btn-primary" style="border-radius: 20px;text-decoration:none;" asp-area="Identity" asp-page="/Account/Logout"><i class="fa-solid fa-right-from-bracket"></i> Se déconnecter</a>
        </li>
        
    }
</ul>
