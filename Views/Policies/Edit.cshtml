@model AstreeWebApp.Models.Policy

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div style="margin:1%;padding:10px;border:5px outset #0096c7;border-radius:20px;width:contain;">
    <h2>Modifier</h2>
    <h3>Police</h3>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <div class="form-group col-sm">
                    <label asp-for="Type" class="control-label"></label>
                    <select asp-for="Type" class="form-control form-select">
                        <option selected disabled>choisir le type de votre police</option>
                        <option value="Bien">Bien</option>
                        <option value="Argent">Argent</option>
                        <option value="Famille">Famille</option>
                    </select>
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="form-group col-sm">
                        <label asp-for="DateDeb" class="control-label">Date de début</label>
                        <input type="date" asp-for="DateDeb" class="form-control" />
                        <span asp-validation-for="DateDeb" class="text-danger"></span>
                    </div>
                    <div class="form-group col-sm">
                        <label asp-for="DateFin" class="control-label">Date de fin</label>
                        <input type="date" asp-for="DateFin" class="form-control" />
                        <span asp-validation-for="DateFin" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group col-sm">
                    <label asp-for="Prime" class="control-label">Prime</label>
                    <input asp-for="Prime" type="number" class="form-control" />
                    <span asp-validation-for="Prime" class="text-danger"></span>
                </div>
                <div class="form-group col-sm">
                    <label asp-for="PolicStatut" class="control-label">Statut police</label>
                    <select asp-for="PolicStatut" class="form-control form-select">
                        <option selected disabled>Sélectionnez le statut</option>
                        <option value="Actif">Actif</option>
                        <option value="Annule">Annule</option>
                        <option value="Expire">Expire</option>
                    </select>
                    <span asp-validation-for="PolicStatut" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <input type="submit" value="Enregistrer" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

</div>

<div>
    <a asp-action="Index" class="link-style">Retour à la liste</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
